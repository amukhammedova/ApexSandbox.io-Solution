public Boolean companionPlants(List<String> plants) {
 // Define a set to store companion pairs
    Set<String> companionPairs = new Set<String>{'lettuce-cucumbers', 'lettuce-onions', 'onions-carrots', 'onions-tomatoes'};

    // Iterate through the list of plants
    for (Integer i = 0; i < plants.size() - 1; i++) {
        String currentPlant = plants[i];
        String nextPlant = plants[i + 1];
        
        // Check if the current and next plant form a companion pair
        String pair = currentPlant + '-' + nextPlant;
        String reversePair = nextPlant + '-' + currentPlant;

        if (!companionPairs.contains(pair) && !companionPairs.contains(reversePair)) {
            return false; // The current and next plants are not companions
        }
    }

    return true; // All plants are next to companion plants
}
