public Boolean companionPlants(List<String> plants) {
    Set<String> companions = new Set<String>{'lettuce-cucumbers', 'lettuce-onions', 'onions-carrots', 'onions-tomatoes'};
    
    for (Integer i = 1; i < plants.size(); i++) {
        String plantPair = plants[i - 1] + '-' + plants[i];
        if (!companions.contains(plantPair)) {
            return false;
        }
    }
    
    return true;
}
