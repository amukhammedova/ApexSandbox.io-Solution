public Boolean companionPlants(List<String> plants) {
    // Define a set of companion plant pairs
    Set<String> companions = new Set<String>{
        'lettuce-cucumbers', 'lettuce-onions', 'onions-carrots', 'onions-tomatoes'
    };
    
    // Iterate through the list of plants
    for (Integer i = 0; i < plants.size(); i++) {
        String currentPlant = plants[i].toLowerCase();
        
        // Check if the current plant is the last one in the list
        if (i == plants.size() - 1) {
            // If it's the last plant, it cannot have a companion
            return false;
        }
        
        String nextPlant = plants[i + 1].toLowerCase();
        
        // Create a string representation of the plant pair
        String plantPair = currentPlant + '-' + nextPlant;
        
        // Check if the plant pair is not in the set of companions
        if (!companions.contains(plantPair)) {
            return false;
        }
    }
    
    // All pairs of plants are companions
    return true;
}
