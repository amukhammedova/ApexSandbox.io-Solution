public String formatName(String firstName, String lastName) {
   
    if(lastName == '' || lastName == 'null' ||  lastName == null ){
        return firstName;
    }else if(firstName == '' || firstName == 'null' ||  firstName == null){
        return lastName;
    }else if((lastName != null || lastName != '' || lastName != 'null') &&
            (firstName != null || firstName != '' || firstName != 'null')){
        return lastName, firstName;
    }else{
        return '';
    }
}