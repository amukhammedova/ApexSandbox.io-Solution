public String formatName(String firstName, String lastName) {
   
    if(lastName == '' ||  lastName == null ){
        return firstName;
    }else if(firstName == '' ||  firstName == null){
        return lastName;
    }else if((lastName != null || lastName != ''  &&
            (firstName != null || firstName != '' ){
        return lastName + ', '+ firstName;
    }else{
        return '';
    }
}